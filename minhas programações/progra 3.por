programa {
  funcao inicio() {
    // Declaração de variáveis.
    real base, altura, area

    // Solicitando dados para o usuário.
    escreva("Digiti a base: ")
    leia(base)

    escreva("Digite a altura: ")
    leia(altura)

    //Realizandob cálculos.
    area = (base * altura) / 2

    // Exibindo resultados.
    escreva("=== Exibindo resultados ====")
    escreva("\nBase: ", base)
    escreva("\nAltura: ", altura)
    escreva ("\nÁrea: ", area)

  }
}
